{
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",

    "python.sortImports.args": ["-rc", "--atomic"],

    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "${workspaceFolder}/.venv/bin/yapf",
    "python.formatting.yapfArgs": [
        "--style",
        "{based_on_style: chromium, indent_width: 20}"
    ],

    "editor.formatOnPaste": false,

    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.maxNumberOfProblems": 50,
    "python.linting.ignorePatterns": [".vscode/*.py", "**/site-packages/**/*.py"],
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "${workspaceFolder}/.venv/bin/pylint",

    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pyTestEnabled": true,
    "python.testing.pyTestArgs": [
        "tests",
        "-v",
        "-s",
        "--no-cov"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.cwd": "${workspaceFolder}",

    "coverage-gutters.showGutterCoverage": true,
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.coverageReportFileName": "index.html"
}